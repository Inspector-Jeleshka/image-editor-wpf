<Window x:Class="wpfApp.ContrastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfApp"
        mc:Ignorable="d"
        Title="Изменить контрастность" Height="250" Width="300" ResizeMode="CanMinimize">
    <Grid Margin="10">
		<StackPanel>
			<TextBlock Text="Изменение контрастности" Margin="0,10,0,2" HorizontalAlignment="Center"/>
			<TextBox x:Name="contrastText" Width="150"/>
			<TextBlock x:Name="ValidationErrorText" Foreground="Red" Margin="0,5,0,0" TextWrapping="Wrap"/>
		</StackPanel>

		<StackPanel Width="170" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
			<Button Content="ОК" Width="75" Margin="5" Click="OkButton_Click"/>
			<Button Content="Отмена" Width="75" Margin="5" Click="CancelButton_Click" IsCancel="True"/>
		</StackPanel>
	</Grid>
</Window>
